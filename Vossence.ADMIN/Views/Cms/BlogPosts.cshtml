@section Scripts {
    <script asp-append-version="true" src="/vendors/sweetalert2/sweetalert2.js"></script>
    <script asp-append-version="true" src="/vendors/tinymce/tinymce.min.js"></script>
        <script>

            function itemCreate() {
                let blogPostID = 0;
                let blogCategoryID = $("#blogCategoryID").val();
                let blogPostName = $("#blogPostName").val();

                let loopCount = 0, list = new Array(), iRow = 1;
                let lang = "", translate = "";

                $('.langCreateLoop').each(function () {
                    let langID = $(this).attr("data-lang");
                    let caption = $("#caption_" + langID).val();
                    let shortText = $("#shortText_" + langID).val();
                    let content = $("#content_" + langID).val();
                    let title = $("#title_" + langID).val();
                    let description = $("#description_" + langID).val();
                    let url = $("#url_" + langID).val();

                    if (caption != "")
                        list.push(new langTabItem(langID, caption, shortText, content, title, description, null, url))
                    iRow++;
                });

                spinnerApp('saveButton');

                $.ajax({
                    type: "POST",
                    url: "/blog-post-app",
                    data: { blogPostID: blogPostID, blogCategoryID: blogCategoryID, blogPostName: blogPostName, list: list },
                    datatype: "html",
                    success: function (result) {
                        if (result.resultType === 1)
                            window.location.reload()
                        else {
                            spinnerRemove('saveButton', "Kaydet");
                            newToast(result.resultCaption, result.resultMessage, "error");
                        }
                    },
                    error: function () {
                        spinnerRemove('saveButton', "Kaydet");
                        newToast("Hata", "Bir hata oluştu lütfen sistem yöneticinize başvurun.", "error");
                    }
                });
            }

            function itemGet(blogPostID) {
                $.ajax({
                    type: "Get",
                    url: "/blog-post-get",
                    data: { blogPostID: blogPostID },
                    contentType: "application/json; charset=utf-8",
                    success: function (result) {
                        $('.langCreateLoop').each(function (index, element) {
                            let langID = $(this).attr("data-lang");

                            $("#caption_" + langID).val("");
                            $("#title_" + langID).val("");
                            $("#description_" + langID).val("");
                            $("#url_" + langID).val("");
                            $("#shortText_" + langID).val("");
                            tinyMCE.get('content_' + langID).setContent("");
                        });

                        $('.langUpdateLoop').each(function (index, element) {
                            let langID = $(this).attr("data-lang");

                            $("#_caption_" + langID).val("");
                            $("#_title_" + langID).val("");
                            $("#_description_" + langID).val("");
                            $("#_url_" + langID).val("");
                            $("#_shortText_" + langID).val("");
                            tinyMCE.get('_content_' + langID).setContent("");
                        });

                        if (result.item1 != null) {
                            $("#_blogPostID").val(result.item1.blogPostID)
                            $("#_blogCategoryID").val(result.item1.blogCategoryID)
                            $("#_blogPostName").val(result.item1.blogPostName)
                        }

                        if (result.item2.length > 0) {
                            $.each(result.item2, function (i, item) {
                                $("#_caption_" + item.langID).val(item.blogPostSubName);
                                $("#_title_" + item.langID).val(item.title);
                                $("#_description_" + item.langID).val(item.description);
                                $("#_url_" + item.langID).val(item.url);
                                $("#_shortText_" + item.langID).val(item.blogPostShortText);
                                tinyMCE.get('_content_' + item.langID).setContent(item.blogPostContent);
                            });
                        }
                    },
                    error: function () { alert("Hata") }
                });
            }

            function itemUpdate() {
                let blogPostID = $("#_blogPostID").val();
                let blogCategoryID = $("#_blogCategoryID").val();
                let blogPostName = $("#_blogPostName").val();

                let loopCount = 0, list = new Array(), iRow = 1;
                let lang = "", translate = "";

                $('.langUpdateLoop').each(function () {
                    let langID = $(this).attr("data-lang");
                    let caption = $("#_caption_" + langID).val();
                    let shortText = $("#_shortText_" + langID).val();
                    let content = $("#_content_" + langID).val();
                    let title = $("#_title_" + langID).val();
