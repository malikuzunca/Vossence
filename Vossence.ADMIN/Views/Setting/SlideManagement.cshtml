@model Tuple<List<SP_Sliders>, List<SP_Products>>

@{
    string pathURL = Context.Request.Path.ToString().StartsWith("/") ? Context.Request.Path.ToString().Remove(0, 1) :
    Context.Request.Path.ToString();
    string cdnURL = ViewBag.CdnURL;
    string topTabCls = "", subTabCls = "", required = "", checkCls = "";

    int topTabRow = 1, subTabRow = 1, iRow = 1;
    bool topTabSelected = false;
}

@{
    <link asp-append-version="true" rel="stylesheet" href="~/vendors/sweetalert2/sweetalert2.css" />
    <link asp-append-version="true" href="~/vendors/choices/choices.min.css" rel="stylesheet" />
}

<div class="mt-4">
    <div class="row g-4">
        <div class="col-12 col-xl-12 order-1 order-xl-0">
            <div class="mb-9">
                <div class="card shadow-none border mb-3" data-component-card="data-component-card">
                    <div class="card-header p-4 border-bottom bg-body">
                        <div class="row g-3 justify-content-between align-items-center">
                            <div class="col-md-9">
                                <h4 class="text-body mb-0">Slayt Yönetimi</h4>
                            </div>
                            <div class="col-md-3 text-end">
                                <a class="btn btn-sm btn-success code-btn ms-2 fw-light collapsed"
                                   data-bs-target="#itemCreateModal" data-bs-toggle="modal">Yeni</a>
                                <a class="btn btn-sm btn-info code-btn ms-2 fw-light collapsed arrangementButton"
                                   onclick="arrangementUpdate()">Sıralama Güncelleme</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="p-4 code-to-copy">
                            <div id="services" data-list='{"valueNames":["sliderName"],"page":10,"pagination":true}'>
                                <div class="mb-4">
                                    <div class="d-flex flex-wrap gap-3">
                                        <div class="search-box">
                                            <form class="position-relative">
                                                <input class="form-control search-input search" type="search"
                                                       placeholder="Aranacak Terim" aria-label="Aranacak Terim" /><span class="fas fa-search search-box-icon"></span>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="bg-body-emphasis border-top border-bottom border-translucent position-relative top-1">
                                    <div class="table-responsive scrollbar mx-n1 px-1">
                                        <table class="table fs-9 mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="white-space-nowrap align-middle ps-4" scope="col">#</th>
                                                    <th class="white-space-nowrap align-middle ps-4 sort text-center"
                                                        scope="col" data-sort="sliderName">Slayt</th>
                                                    <th class="white-space-nowrap align-middle ps-4 text-center"
                                                        scope="col">Slayt Başlık</th>
                                                    <th class="white-space-nowrap align-middle ps-4 text-left"
                                                        scope="col">Durum</th>
                                                    <th class="white-space-nowrap align-middle ps-4 text-center"
                                                        scope="col">Resim</th>
                                                    <th class="white-space-nowrap align-middle ps-4 text-end"
                                                        scope="col">İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody class="list" id="products-table-body">
                                                @if (Model.Item1.Count() > 0)
                                                {
                                                    foreach (var item in Model.Item1)
                                                    {
                                                        checkCls = item.IsActive ? "checked" : "";
                                                        <tr>
                                                            <td class="text-center align-middle">
                                                                <input type="number"
                                                                       class="form-control form-control-sm w-50 arrangementCls text-center"
                                                                       data-id="@item.SliderID" value="@item.Arrangement" />
                                                            </td>
                                                            <td class="servicName align-middle text-center"
                                                                title="@item.SliderName">
                                                                @item.SliderName
                                                            </td>
                                                            <td class="servicName align-middle text-center"
                                                                title="@item.SlideTitle">
                                                                @item.SlideTitle
                                                            </td>
                                                            <td class="align-middle text-left">
                                                                <div class="form-check form-switch mx-4">
                                                                    <input class="form-check-input"
                                                                           onchange="isActiveUpdate('@item.SliderID', 'item_@item.SliderID')"
                                                                           id="item_@item.SliderID" type="checkbox" @checkCls />
                                                                    <label class="form-check-label"
                                                                           for="item_@item.SliderID"></label>
                                                                </div>
                                                            </td>
                                                            <td class="align-middle text-center">
                                                                <img width="70"
                                                                     src="@cdnURL/Vossence/Sliders/@item.ImageURL" />
                                                            </td>
                                                            <td class="text-end">
                                                                <a class="btn btn-primary btn-sm btn-icon d-inline p-2"
                                                                   title="Güncelle" onclick="itemGet(@item.SliderID)"
                                                                   data-bs-toggle="modal" data-bs-target="#itemUpdateModal">
                                                                    <i class="fa fa-edit"></i>
                                                                </a>
                                                                <a class="btn btn-success btn-sm btn-icon d-inline p-2"
                                                                   title="Liste Görsel"
                                                                   onclick="ImageGet(@item.SliderID, '@item.SliderName', '@item.ImageURL')"
                                                                   data-bs-toggle="modal"
                                                                   data-bs-target="#itemSingleUploadModal">
                                                                    <i class="fa fa-image"></i>
                                                                </a>
                                                                <a class="btn btn-danger btn-sm btn-icon d-inline p-2"
                                                                   title="Sil" onclick="itemDelete(@item.SliderID)">
                                                                    <i class="fa fa-trash"></i>
                                                                </a>
                                                            </td>
                                                        </tr>

                                                        iRow++;
                                                    }
                                                }
