                                            multiple="multiple" data-options='{"removeItemButton":true,"placeholder":true, "placeholderValue": "Ürün seçiniz..."}'>
                                        @if (Model.Item2 != null)
                                        {
                                            @foreach (var item in Model.Item2)
                                            {
                                                <option value="@item.ProductID">@item.ProductName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="mt-3 mb-3 langPanel">
                                <h4 class="border-bottom">Dil Çevirileri</h4>
                            </div>
                            <div class="langPanel">
                                <ul class="nav nav-underline fs-9 mb-3 pb-5" id="langTab" role="tablist">
                                    @foreach (var item in injectHelper.LangList())
                                    {
                                        topTabCls = topTabRow == 1 ? "active" : "";
                                        topTabSelected = topTabRow == 1 ? true : false;

                                        <li class="nav-item px-3">
                                            <a class="nav-link @topTabCls" id="langTab_@item.LangID" data-bs-toggle="tab"
