@section Scripts {
    <script asp-append-version="true" src="~/vendors/sweetalert2/sweetalert2.js"></script>
    <script asp-append-version="true" src="~/vendors/tinymce/tinymce.min.js"></script>
    <script asp-append-version="true" src="~/vendors/choices/choices.min.js"></script>
    <script>

        function itemCreate() {
            let sliderID = 0;
            let sliderName = $("#sliderName").val();

            let loopCount = 0, list = new Array(), iRow = 1;
            let lang = "", translate = "";

            const selectElement = document.getElementById("productCamp");
            const selectedValues = Array.from(selectElement.selectedOptions).map(option => option.value);

            $('.langCreateLoop').each(function () {
                let langID = $(this).attr("data-lang");
                let caption = $("#caption_" + langID).val();
                let content = $("#content_" + langID).val();
                let title = $("#title_" + langID).val();
                let description = $("#description_" + langID).val();
                let url = $("#url_" + langID).val();

                if (caption != "")
                    list.push(new langTabItem(langID, caption, null, content, title, description,null,  url))
                iRow++;
            });

            spinnerApp('saveButton');

            $.ajax({
                type: "POST",
                url: "/slide-app",
                data: { sliderID: sliderID, sliderName: sliderName, list: list, selectedValues: selectedValues },
                datatype: "html",
                success: function (result) {
                    if (result.resultType === 1)
                        window.location.reload()
                    else {
                        spinnerRemove('saveButton', "Kaydet");
                        newToast(result.resultCaption, result.resultMessage, "error");
                    }
                },
                error: function () {
                    spinnerRemove('saveButton', "Kaydet");
                    newToast("Hata", "Bir hata oluştu lütfen sistem yöneticinize başvurun.", "error");
                }
            });
        }

        function itemGet(sliderID) {

            $.ajax({
                type: "Get",
                url: "/slide-get",
                data: { sliderID: sliderID },
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    $('.langCreateLoop').each(function (index, element) {
                        let langID = $(this).attr("data-lang");

                        $("#caption_" + langID).val("");
                        $("#title_" + langID).val("");
                        $("#description_" + langID).val("");
                        $("#url_" + langID).val("");
                    });

                    $('.langUpdateLoop').each(function (index, element) {
                        let langID = $(this).attr("data-lang");

                        $("#_caption_" + langID).val("");
                        $("#_title_" + langID).val("");
                        $("#_description_" + langID).val("");
                        $("#_url_" + langID).val("");
                    });

                    if (result.item1 != null) {
                        $("#_sliderID").val(result.item1.sliderID)
                        $("#_sliderName").val(result.item1.sliderName)
                    }

                    if (result.item2.length > 0) {
                        $.each(result.item2, function (i, item) {
                            $("#_caption_" + item.langID).val(item.slideTitle);
                            $("#_title_" + item.langID).val(item.slideText);
                            $("#_description_" + item.langID).val(item.buttonText);
                            $("#_url_" + item.langID).val(item.url);
                        });
                    }
                    if (result.item3.length > 0) {
                        let selectItem = document.getElementById("dropdownList");
                        selectItem.innerHTML = "";
                        $.each(result.item3, function(i,item){
                            let a = document.createElement("a");
                            a.className = "dropdown-item";
                            a.setAttribute("value", item.productID);
                            a.textContent = item.productName + "  ";
                            selectItem.appendChild(a);
                            let c = document.createElement("span");
                            let b = document.createElement("i")
                            b.className = "fa-solid fa-xmark fa-xl";
                            c.appendChild(b);
                            a.appendChild(c);
                            c.addEventListener("click", function() {
                                let id = this.getAttribute("value");
                                removeProduct(id,sliderID);
                                selectItem.removeChild(a);
                            });
                         });
