@section Scripts {
    <script asp-append-version="true" src="/vendors/sweetalert2/sweetalert2.js"></script>
    <script>

        function itemCreate() {
            let categoryID = 0;
            let categoryName = $("#categoryName").val();
            let categorySubID = $("#categorySubID").val();
            let loopCount = 0, list = new Array(), iRow = 1;
            let lang = "", translate = "";

            $('.langCreateLoop').each(function () {
                let langID = $(this).attr("data-lang");
                let caption = $("#caption_" + langID).val();
                let content = $("#content_" + langID).val();
                let title = $("#title_" + langID).val();
                let description = $("#description_" + langID).val();
                let url = $("#url_" + langID).val();

                if (caption != "")
                    list.push(new langTabItem(langID, caption, null, content, title, description, null, url))
                iRow++;
            });

            spinnerApp('saveButton');

            $.ajax({
                type: "POST",
                url: "/category-app",
                data: { categoryID: categoryID, categoryName: categoryName, categorySubID:categorySubID, list: list },
                datatype: "html",
                success: function (result) {
                    if (result.resultType === 1)
                        window.location.reload()
                    else {
                        spinnerRemove('saveButton', "Kaydet");
                        newToast(result.resultCaption, result.resultMessage, "error");
                    }
                },
                error: function () {
                    spinnerRemove('saveButton', "Kaydet");
                    newToast("Hata", "Bir hata oluştu lütfen sistem yöneticinize başvurun.", "error");
                }
            });
        }

        function itemGet(categoryID) {
            $.ajax({
                type: "Get",
                url: "/category-get",
                data: { categoryID: categoryID },
                contentType: "application/json; charset=utf-8",
                success: function (result) {
                    $('.langCreateLoop').each(function (index, element) {
                        let langID = $(this).attr("data-lang");

                        $("#caption_" + langID).val("");
                        $("#title_" + langID).val("");
                        $("#description_" + langID).val("");
                        $("#url_" + langID).val("");
                    });

                    $('.langUpdateLoop').each(function (index, element) {
                        let langID = $(this).attr("data-lang");

                        $("#_caption_" + langID).val("");
                        $("#_title_" + langID).val("");
                        $("#_description_" + langID).val("");
                        $("#_url_" + langID).val("");
                    });

                    if (result.item1 != null) {
                        $("#_categoryID").val(result.item1.categoryID)
                        $("#_categoryName").val(result.item1.categoryName)
                    }
                    if(result.item3 != null){
                        $("#_categorySubID").append(`<option value="${result.item3.categoryID}" selected>${result.item3.categoryName}</option>`);
                    }
                    if (result.item2.length > 0) {
                        $.each(result.item2, function (i, item) {
                            $("#_caption_" + item.langID).val(item.categorySubName);
                            $("#_title_" + item.langID).val(item.title);
                            $("#_description_" + item.langID).val(item.description);
                            $("#_url_" + item.langID).val(item.url);
                        });
                    }
                },
                error: function () { alert("Hata") }
            });
        }

        function itemUpdate() {
            let categoryID = $("#_categoryID").val();
            let categoryName = $("#_categoryName").val();
            let categorySubID = $("#_categorySubID").val();

            let loopCount = 0, list = new Array(), iRow = 1;
            let lang = "", translate = "";

            $('.langUpdateLoop').each(function () {
                let langID = $(this).attr("data-lang");
                let caption = $("#_caption_" + langID).val();
                let content = $("#_content_" + langID).val();
                let title = $("#_title_" + langID).val();
                let description = $("#_description_" + langID).val();
                let url = $("#_url_" + langID).val();

                list.push(new langTabItem(langID, caption, null, content, title, description,null, url))
            });

            spinnerApp('saveButton');

            $.ajax({
                type: "POST",
                url: "/category-app",
                data: { categoryID: categoryID, categoryName: categoryName,categorySubID:categorySubID ,list: list },
                datatype: "html",
                success: function (result) {
                    if (result.resultType === 1)
                        window.location.reload()
                    else {
                        spinnerRemove('saveButton', "Kaydet");
                        newToast(result.resultCaption, result.resultMessage, "error");
                    }
                },
                error: function () {
                    spinnerRemove('saveButton', "Kaydet");
                    newToast("Hata", "Bir hata oluştu lütfen sistem yöneticinize başvurun.", "error");
                }
            });
        }

         function categoryImageGet(categoryID, categoryName, imageURL) {
            $("#__categoryID").val(categoryID);
            $("#itemSingleUploadCaption").html("Ürün Görsel (" + categoryName + ")");

            if (imageURL != "") {
                $("#listImageModalDiv").removeClass("d-none");
                $("#listImageModalSrc").attr("src", "@cdnURL" + imageURL)
                $("#listImageModalSrc").attr("alt", categoryName)
                $("#listImageModalSubCaption").html(categoryName)
            }
            else {
                $("#listImageModalDiv").addClass("d-none");
                $("#listImageModalSrc").attr("src", "")
                $("#listImageModalSrc").attr("alt", "")
                $("#listImageModalSubCaption").html("")
            }
        }

        function categoryImageApp() {
            var categoryID = $("#__categoryID").val();
            var categoryImageURL = $('#categoryImageURL')[0].files;

            var model = new FormData();
            model.append('categoryID', categoryID);
            model.append('categoryImageURL', categoryImageURL[0]);

            spinnerApp("listImageAppButton")

            $.ajax({
                type: "POST",
                url: "/category-image-app",
                data: model,
                datatype: "html",
                processData: false,
                contentType: false,
                success: function (result) {
                    if (result.resultType === 1)
                        window.location.reload()
                    else {
                        spinnerRemove('listImageAppButton', "Kaydet");
                        newToast(result.resultCaption, result.resultMessage, "error");
                    }
                },
                error: function () {
                    spinnerRemove('listImageAppButton', "Kaydet");
                    newToast("Hata", "Bir hata oluştu lütfen sistem yöneticinize başvurun.", "error");
                }
            });
        }

        function isActiveUpdate(categoryID, checkID) {
            $.ajax({
                type: "POST",
                url: "/category-process",
                data: { processType: 1, categoryID: categoryID },
                datatype: "html",
                success: function (result) {
                    if (result.resultType === 1) {
                        newToast(result.resultCaption, result.resultMessage, "success");
                    }
                    else {
