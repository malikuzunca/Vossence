                                            subTabCls = subTabRow == 1 ? "show active" : "";
                                            required = subTabRow == 1 ? "required" : "";

                                            <div class="langCreateLoop tab-pane fade @subTabCls" data-lang="@item.LangID" id="lang_@item.LangID" role="tabpanel" aria-labelledby="langTab_@item.LangID">
                                                <div class="row mb-2 langRowNonDiv langRowNonDiv_@item.LangID">
                                                    <label class="col-sm-3 col-form-label" for="caption_@item.LangID">Kategori Adı</label>
                                                    <div class="col-sm-9"><input class="form-control langRowNonCaption_@item.LangID" onblur="urlPrint('caption_@item.LangID', @item.LangID, 1, '@pathURL')" id="caption_@item.LangID" type="text" placeholder="@item.LangName Dili İçin Çeviri Giriniz" maxlength="200" @required /></div>
                                                </div>
                                                <div class="row mb-2 nonExternalLinkGroup langRowNonDiv langRowNonDiv_@item.LangID">
                                                    <label class="col-sm-3 col-form-label" for="title_@item.LangID">Title</label>
                                                    <div class="col-sm-9"><input class="form-control langRowNonTitle_@item.LangID" id="title_@item.LangID" type="text" placeholder="@item.LangName Dili İçin Çeviri Giriniz" maxlength="200" @required /></div>
                                                </div>
                                                <div class="row mb-2 nonExternalLinkGroup langRowNonDiv langRowNonDiv_@item.LangID">
                                                    <label class="col-sm-3 col-form-label" for="description_@item.LangID">Description</label>
                                                    <div class="col-sm-9"><input class="form-control langRowNonDescription_@item.LangID" id="description_@item.LangID" type="text" placeholder="@item.LangName Dili İçin Çeviri Giriniz" maxlength="300" @required /></div>
                                                </div>
                                                <div class="row mb-2 nonExternalLinkGroup langRowNonDiv langRowNonDiv_@item.LangID">
                                                    <label class="col-sm-3 col-form-label" for="url_@item.LangID">URL</label>
                                                    <div class="col-sm-9"><input class="form-control langRowNonURL_@item.LangID" id="url_@item.LangID" type="text" placeholder="@item.LangName Dili İçin Çeviri Giriniz" maxlength="300" @required /></div>
                                                </div>
                                            </div>
                                            subTabRow++;
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary saveButton" type="submit">Kaydet</button>
                    <button class="btn btn-outline-danger" type="button" data-bs-dismiss="modal">İptal</button>
